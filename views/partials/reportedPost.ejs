
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Reported Posts</title>
    <!-- Tell the browser to be responsive to screen width -->
    <% include ../layout.ejs %>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="/bower/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/bower/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="/bower/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="/dist/css/skins/_all-skins.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="/bower/select2/dist/css/select2.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div ng-app="ASK_BIN" ng-controller="ProfileController as up">
    <div class="wrapper">


        <!-- Left side column. contains the logo and sidebar -->
        <% include header.ejs %>

        <% include sidebar.ejs %>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Reported Posts
                </h1>
                <ol class="breadcrumb">
                    <li><a href="/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li class="active">Reported Posts</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">

                <div class="row">

                    <!-- /.col -->
                    <div class="col-md-1"></div>
                    <div class="col-md-8">
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#reportedPost" data-toggle="tab">Reported Posts</a></li>
                                <!--<li><a href="#timeline" data-toggle="tab">Answers Submitted</a></li>-->
                                <li><a href="#reportedAnswer" data-toggle="tab">Reported Answers</a></li>


                            </ul>
                            <div class="tab-content">
                                <div class="active tab-pane" id="reportedPost">
                                    <!-- Post -->
                                    <p ng-if="!reportedPost.length" style="text-align:center;">You haven't asked any Questions yet</p>
                                    <div class="post clearfix" ng-if="reportedPost.length> 0" ng-repeat = "item in reportedPost">
                                        <div class="user-block">
                                            <p><b>Posted By</b></p>
                                            <img class="img-circle img-bordered-sm" src="/uploads/{{item.postedBy.profilePic}}" alt="user image">
                                            <span class="username">
                                        <a href="#">{{item.postedBy.firstname + ' ' + item.postedBy.lastname}}</a>
                                        <a href="#" class="pull-right btn-box-tool"><i class="fa fa-times"></i></a>
                                        </span>
                                            <span class="description">{{item.post.create_time | readableTimeFilter }}</span>
                                        </div>
                                        <p>
                                            {{item.post.content.text}}
                                        </p>
                                        <div class="clearfix">
                                            <a class="example-image-link" href="/uploads/{{item.post.content.file}}" data-lightbox="{{item._id}}"> <img style="margin-left: 30px" class="attachment-img img-thumbnail " width="10%" height="10%" src="/uploads/{{item.post.content.file}}" alt="Attachment Image" center-justified="true"></a>
                                        </div>


                                        <div class="user-block">

                                            <p><b>Reported By</b></p>
                                            <img class="img-circle img-bordered-sm" src="/uploads/{{item.reportedBy.profilePic}}" alt="user image">
                                            <span class="username">
                                        <a href="#">{{item.reportedBy.firstname + ' ' + item.reportedBy.lastname}}</a>
                                        <a href="#" class="pull-right btn-box-tool"><i class="fa fa-times"></i></a>
                                        </span>
                                            <span class="description">{{item.create_time | readableTimeFilter }}</span>
                                        </div>





                                        <!-- /.user-block -->
                                        <p><b>Reason for reporting: </b>  {{item.reason}}</p>
                                        <label>Take Action: </label><br>
                                        <ul class="list-inline">
                                            <button type="button" class="btn btn-warning" style="margin-left: 40px" data-toggle="tooltip" title="Report Post" ng-click ="deletePost(item)">
                                                <i class="fa fa-ban" ></i> Delete Post</button>
                                            <button type="button" style="margin-right: 40px" class="btn btn-success pull-right" data-toggle="tooltip" title="Save Post" ng-click ="clearPost(item._id)">
                                                <i class="fa fa-save" ></i> Clear Post from Reported Posts</button>

                                        </ul>








                                    </div>
                                    <!-- /.post -->



                                </div>
                                <!-- /.tab-pane -->
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <ul class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        <li class="time-label">
                        <span class="bg-red">
                          10 Feb. 2014
                        </span>
                                        </li>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <li>
                                            <i class="fa fa-envelope bg-blue"></i>

                                            <div class="timeline-item">
                                                <span class="time"><i class="fa fa-clock-o"></i> 12:05</span>

                                                <h3 class="timeline-header"><a href="#">Support Team</a> sent you an email</h3>

                                                <div class="timeline-body">
                                                    Etsy doostang zoodles disqus groupon greplin oooj voxy zoodles,
                                                    weebly ning heekya handango imeem plugg dopplr jibjab, movity
                                                    jajah plickers sifteo edmodo ifttt zimbra. Babblely odeo kaboodle
                                                    quora plaxo ideeli hulu weebly balihoo...
                                                </div>
                                                <div class="timeline-footer">
                                                    <a class="btn btn-primary btn-xs">Read more</a>
                                                    <a class="btn btn-danger btn-xs">Delete</a>
                                                </div>
                                            </div>
                                        </li>
                                        <!-- END timeline item -->
                                        <!-- timeline item -->
                                        <li>
                                            <i class="fa fa-user bg-aqua"></i>

                                            <div class="timeline-item">
                                                <span class="time"><i class="fa fa-clock-o"></i> 5 mins ago</span>

                                                <h3 class="timeline-header no-border"><a href="#">Sarah Young</a> accepted your friend request
                                                </h3>
                                            </div>
                                        </li>
                                        <!-- END timeline item -->
                                        <!-- timeline item -->
                                        <li>
                                            <i class="fa fa-comments bg-yellow"></i>

                                            <div class="timeline-item">
                                                <span class="time"><i class="fa fa-clock-o"></i> 27 mins ago</span>

                                                <h3 class="timeline-header"><a href="#">Jay White</a> commented on your post</h3>

                                                <div class="timeline-body">
                                                    Take me to your leader!
                                                    Switzerland is small and neutral!
                                                    We are more like Germany, ambitious and misunderstood!
                                                </div>
                                                <div class="timeline-footer">
                                                    <a class="btn btn-warning btn-flat btn-xs">View comment</a>
                                                </div>
                                            </div>
                                        </li>
                                        <!-- END timeline item -->
                                        <!-- timeline time label -->
                                        <li class="time-label">
                        <span class="bg-green">
                          3 Jan. 2014
                        </span>
                                        </li>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <li>
                                            <i class="fa fa-camera bg-purple"></i>

                                            <div class="timeline-item">
                                                <span class="time"><i class="fa fa-clock-o"></i> 2 days ago</span>

                                                <h3 class="timeline-header"><a href="#">Mina Lee</a> uploaded new photos</h3>

                                                <div class="timeline-body">
                                                    <img src="http://placehold.it/150x100" alt="..." class="margin">
                                                    <img src="http://placehold.it/150x100" alt="..." class="margin">
                                                    <img src="http://placehold.it/150x100" alt="..." class="margin">
                                                    <img src="http://placehold.it/150x100" alt="..." class="margin">
                                                </div>
                                            </div>
                                        </li>
                                        <!-- END timeline item -->
                                        <li>
                                            <i class="fa fa-clock-o bg-gray"></i>
                                        </li>
                                    </ul>
                                </div>
                                <!-- /.tab-pane -->

                                <div class="tab-pane" id="savedposts">
                                    <p ng-if="!savedPosts.length" style="text-align:center;">No Posts have been saved yet</p>
                                    <div class="post clearfix" ng-if="savedPosts.length>0" ng-repeat = "item in savedPosts">
                                        <div class="user-block">
                                            <img class="img-circle img-bordered-sm" src="/uploads/{{item.posted_by.profilePic}}" alt="user image">
                                            <span class="username">
                                          <a href="#">{{item.posted_by.firstname + ' ' + item.posted_by.lastname }}</a>
                                          <a href="#" class="pull-right btn-box-tool"><i class="fa fa-times"></i></a>
                                        </span>
                                            <span class="description">{{item.update_time | readableTimeFilter }}</span>
                                        </div>
                                        <!-- /.user-block -->
                                        <p>
                                            {{item.content.text}}
                                        </p>
                                        <ul class="list-inline">
                                            <li><a href="#" class="link-black text-sm"><i class="fa fa-share margin-r-5"></i> Share</a></li>
                                            <li><a href="#" class="link-black text-sm"><i class="fa fa-thumbs-o-up margin-r-5"></i> Like ({{item.like}})</a>
                                            </li>
                                            <li class="pull-right">
                                                <a href="#" class="link-black text-sm"><i class="fa fa-comments-o margin-r-5"></i> Comments
                                                    ({{item.comment_count}})</a></li>
                                        </ul>


                                        <div class="box-group" id="accordion">
                                            <!-- we are adding the .panel class so bootstrap.js collapse plugin detects it -->
                                            <div class="panel box box-danger">
                                                <div class="box-header with-border">
                                                    <h4 class="box-title">
                                                        <a data-toggle="collapse" data-parent="#accordion" href="#{{'s'+item._id}}">
                                                            Click to toggle all the comments
                                                        </a>
                                                    </h4>
                                                </div>
                                                <div id="{{'s'+item._id}}" class="panel-collapse collapse in">
                                                    <div class="box-body">
                                                        <div class="box-comment clearfix" ng-repeat="x in item.comment">
                                                            <!-- User image -->

                                                            <div class="comment-text">
                                <span class="username">
                                    <b>   {{ x.firstname + ' '+  x.lastname}} - {{x.occupation}}</b>


                                    <span class="text-muted pull-right">{{x.created_at|readableTimeFilter}}</span>
                                </span><!-- /.username -->
                                                                <br><br>
                                                                {{x.text}}

                                                                <div>
                                                                    <button ng-if = "userProfile._id!=x.user" ng-click="upVoteAnswer(x._id,item._id)"><a href="#" class="link-black btn-default pull-right text-sm"><i class="fa fa-level-up margin-r-5"></i> Upvote ({{item.like}})</a>
                                                                    </button>
                                                                    <button ng-if = "userProfile._id!=x.user" ng-click="downVoteAnswer(x)"><a href="#" class="link-black btn-default pull-right text-sm"><i class="fa fa-level-down margin-r-5"></i> Downvote ({{item.like}})</a>
                                                                    </button>
                                                                </div>

                                                            </div>
                                                            <hr/>
                                                            <!-- /.comment-text -->
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>





                                    </div>
                                    <!-- /.post -->
                                </div>
                                <!-- /.tab-pane -->



                                <div class="tab-pane" id="suggestedEdits">
                                    <!-- Post -->
                                    <p ng-if="!suggestedEdits.length" style="text-align:center;">No suggestions yet</p>
                                    <div class="post clearfix" ng-if="suggestedEdits.length> 0" ng-repeat = "item in suggestedEdits">
                                        <div class="">
                                            <span class="description pull-right"><b>{{item.create_time | readableTimeFilter }}</b></span>
                                            <span class="username">
                                            <p><b>Question - <i>{{item.post.content.text}}</i></b></p>
                                                <!--<a href="#" class="pull-right btn-box-tool"><i class="fa fa-times"></i></a>-->

                                        </span>

                                        </div>
                                        <!-- /.user-block -->




                                        <p><b>Your Answer</b> - {{item.answer_posted}}</p>
                                        <p><b>Suggested Edit</b> - {{item.text}}</p>
                                        <p><b>Suggested By</b> - {{item.posted_by.firstname  + ' ' + item.posted_by.lastname}} ({{item.posted_by.occupation}})</p>



                                    </div>
                                    <!-- /.post -->



                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div>
                        <!-- /.nav-tabs-custom -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->








            </section>
            <!-- /.content -->






            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header" style="padding:35px 50px;">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Update profile</h4>
                        </div>
                        <div class="modal-body" style="padding:40px 50px;">

                            <div class="box box-solid">

                                <!-- /.box-header -->
                                <!-- form start -->
                                <form class="form-horizontal" method="POST">
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">First Name</label>

                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" placeholder="First Name" ng-model="firstname">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Last Name</label>

                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" placeholder="Last Name" ng-model="lastname">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Email</label>

                                            <div class="col-sm-9">
                                                <input type="email" class="form-control" placeholder="Email" ng-model="email">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Phone</label>

                                            <div class="col-sm-9">
                                                <input type="phonenumber" class="form-control" placeholder="Phone number" ng-model="phone">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Occupation</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" placeholder="Occupation" ng-model="occupation">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Address</label>

                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" placeholder="address" ng-model="permanent_address">
                                            </div>
                                        </div>
                                        <div class="form-group has-feedback">
                                            <label>Level of Expertise</label>
                                            <select class="form-control select2" style="width: 100%;" ng-model="expertise">
                                                <option selected="selected">Beginner</option>
                                                <option>Intermediate</option>
                                                <option>Professional</option>
                                                <option>Expert</option>

                                            </select>
                                        </div>



                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Interest</label>
                                            <div class="col-sm-9">
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" ng-model="Education">
                                                        Education
                                                    </label>
                                                </div>

                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" ng-model = "Technology">
                                                        Technology
                                                    </label>
                                                </div>

                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" ng-model="Civics">
                                                        Civics
                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" ng-model="Politics">
                                                        Politics
                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" ng-model="Websites">
                                                        Websites
                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" ng-model="Android">
                                                        Android
                                                    </label>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <form method="POST" name="up.upload_form" encType="multipart/form-data">

                                                <label class="col-sm-3 control-label">Update Profile Picture</label>

                                                <input
                                                        type="file"
                                                        ngf-select
                                                        ng-model="up.file"
                                                        name="file"
                                                        ngf-pattern="'image/*'"
                                                        accept="image/*"
                                                        ngf-max-size="20MB"
                                                />
                                                Image thumbnail: <img style="width:100px;" ng-show="!!up.file" ngf-thumbnail="up.file || '/images/default_user.png'"/>
                                                <i ng-show="up.upload_form.file.$error.required">*required</i><br>
                                                <i ng-show="up.upload_form.file.$error.maxSize">File too large
                                                    {{up.file.size / 1000000|number:1}}MB: max 20M</i>
                                                <p>{{up.progress}}</p>
                                            </form>

                                        </div>

                                        <button type="submit" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-info pull-right" ng-click="up.submit()" data-dismiss="modal">Save changes</button>
                                    </div>
                                    <!-- /.box-footer -->
                                </form>
                            </div>

                        </div>
                    </div>
                </div></div>

        </div>
        <!-- /.content-wrapper -->
       <% include footer.ejs %>


        <!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->

    <!-- jQuery 3 -->
    <script src="/bower/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="/bower/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="/bower/fastclick/lib/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="/dist/js/adminlte.min.js"></script>
    <!-- Select2 -->
    <script src="/bower/select2/dist/js/select2.full.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="/dist/js/demo.js"></script>


    <!-- Page script -->
    <script>
        $(function () {
            //Initialize Select2 Elements
            $('.select2').select2()

            //Datemask dd/mm/yyyy
            $('#datemask').inputmask('dd/mm/yyyy', { 'placeholder': 'dd/mm/yyyy' })
            //Datemask2 mm/dd/yyyy
            $('#datemask2').inputmask('mm/dd/yyyy', { 'placeholder': 'mm/dd/yyyy' })
            //Money Euro
            $('[data-mask]').inputmask()

            //Date range picker
            $('#reservation').daterangepicker()
            //Date range picker with time picker
            $('#reservationtime').daterangepicker({ timePicker: true, timePickerIncrement: 30, format: 'MM/DD/YYYY h:mm A' })
            //Date range as a button
            $('#daterange-btn').daterangepicker(
                {
                    ranges   : {
                        'Today'       : [moment(), moment()],
                        'Yesterday'   : [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                        'Last 7 Days' : [moment().subtract(6, 'days'), moment()],
                        'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                        'This Month'  : [moment().startOf('month'), moment().endOf('month')],
                        'Last Month'  : [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
                    },
                    startDate: moment().subtract(29, 'days'),
                    endDate  : moment()
                },
                function (start, end) {
                    $('#daterange-btn span').html(start.format('MMMM D, YYYY') + ' - ' + end.format('MMMM D, YYYY'))
                }
            )

            //Date picker
            $('#datepicker').datepicker({
                autoclose: true
            })

            //iCheck for checkbox and radio inputs
            $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
                checkboxClass: 'icheckbox_minimal-blue',
                radioClass   : 'iradio_minimal-blue'
            })
            //Red color scheme for iCheck
            $('input[type="checkbox"].minimal-red, input[type="radio"].minimal-red').iCheck({
                checkboxClass: 'icheckbox_minimal-red',
                radioClass   : 'iradio_minimal-red'
            })
            //Flat red color scheme for iCheck
            $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
                checkboxClass: 'icheckbox_flat-green',
                radioClass   : 'iradio_flat-green'
            })

            //Colorpicker
            $('.my-colorpicker1').colorpicker()
            //color picker with addon
            $('.my-colorpicker2').colorpicker()

            //Timepicker
            $('.timepicker').timepicker({
                showInputs: false
            })
        })
    </script>
</div>
</body>
</html>
